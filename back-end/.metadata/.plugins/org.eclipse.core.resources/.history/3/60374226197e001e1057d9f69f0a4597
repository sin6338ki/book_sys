package com.sjy.book_sys.service;

import org.springframework.stereotype.Service;

import com.sjy.book_sys.dto.MemberDto;
import com.sjy.book_sys.mapper.MemberMapper;

import lombok.RequiredArgsConstructor;

/**
 * 회원 관련 서비스 
 * 
 * @author 신지영
 * @version 1.0
 */
@RequiredArgsConstructor
@Service
public class MemberService {
	
	private final MemberMapper memberMapper;
	
	/**
	 * 회원가입 메소드
	 * 
	 * @return 회원가입 성공시 "success", 실패시 "fail"
	 */
	public String signup(MemberDto memberDto) {
		int isSuccess = memberMapper.signup(memberDto);
		if(isSuccess > 0) {
			return "success";
		}else {
			return "fail";
		}
	}
	
	/**
	 * 중복 id 확인 메서드
	 * 
	 * @return 중복 아이디 없을 경우 true, 있을 경우 false
	 */
	public boolean checkId(String memberId) {
		int isSameId = memberMapper.checkId(memberId);
		if(isSameId > 0) {
			return false;
		}else {
			return true;
		}
	}
	
}
