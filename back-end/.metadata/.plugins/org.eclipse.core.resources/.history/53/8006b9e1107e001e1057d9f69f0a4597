#context-root 설정
server.servlet.context-path=/book
#server port number
server.port=8085

# EX. DB연결정보  
spring.datasource.driver-class-name=org.mariadb.jdbc.Driver
spring.datasource.url=jdbc:mariadb://localhost:3306/book_sys
spring.datasource.username=book_sys
spring.datasource.password=book_sys_12345

# Springdoc(Swagger) 설정
springdoc.packages-to-scan=com.sjy.book_sys.controller
springdoc.default-consumes-media-type=application/json;charset=UTF-8
springdoc.default-produces-media-type=application/json;charset=UTF-8
springdoc.swagger-ui.path=/
springdoc.api-docs.enabled=true
springdoc.swagger-ui.enabled=true
springdoc.enable-javadoc=true